{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the Vibed desktop app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    "dialog:allow-open",
    "dialog:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-read-dir",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive"
  ]
}
